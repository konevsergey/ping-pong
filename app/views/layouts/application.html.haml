!!!
%html{ :"ng-app" => "app" }

  %head
    %title Tennis
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    "//fonts.googleapis.com/css?family=Roboto|Montserrat:400,700|Open+Sans:400,300,600"
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %base{href: "/"}

  %body{ :"ng-class" => "ng-cloak" }

    %span{ :'us-spinner' => true, :'spinner-key' => "spinner" }
    =render partial: 'layouts/header'

    .container
      .col-md-10.col-md-offset-1
        .panel.panel-default
          .panel-body
            %ncy-breadcrumb

            .ui-view
