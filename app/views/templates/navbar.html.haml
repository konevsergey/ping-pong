#navbar-container{ :'ng-controller' => 'NavbarCtrl as vm' }
  %nav.navbar.navbar-default.navbar-fixed-top{:role => :navigation}
    .container
      .row.col-md-10.col-md-offset-1
        #navbar
          .navbar-header
            %a{  :"ui-sref" => "home", class: 'navbar-brand' }
              Home
          %ul.nav.navbar-nav.pull-left
            %li
              %a{ :"ui-sref" => "tournaments" } Tournaments
            %li
              %a{ :"ui-sref" => "games" } Games
            %li
              %a{ :"ui-sref" => "users" } Users
            %li
              %a{ :"ui-sref" => "rating" } Rating
          %ul.nav.navbar-nav.pull-right
            %li.dropdown{ :"ng-show" => "vm.isAuthenticated()" }
              %a.dropdown-toggle{ :"data-toggle" => "dropdown", id: "dropdown-menu", :"ng-href" => '#' }
                {{ currentUser.email }}
                %span.caret
              %ul.dropdown-menu{ role: "menu" }
                %li
                  %a{ :"ui-sref" => 'profile'}
                    My profile
                %li
                  %a{ :"ng-href" => '#', :"ng-click" => 'vm.logout()', id: 'logout' }
                    Logout

            %li{ :"ng-show" => "!vm.isAuthenticated()" }
              %a{ :"ui-sref" => "login" }
                Log In
            %li{ :"ng-show" => "!vm.isAuthenticated()" }
              %a{ :"ui-sref" => "signup" }
                Sign Up
