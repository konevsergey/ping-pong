.form-group
  %table.table-hover
    %thead
      %tr
        %th.col-md-1 â„–
        %th.col-md-9 Round
        %th.col-md-1 Sets
        %th.col-md-1
    %tbody
      %tr{ ng_repeat: 'round in vm.rounds' }
        %td
          {{ $index+1 }}
        %td
          {{ round.name }}
        %td
          %input.form-control{ ng_model: 'round.sets',
                               name: 'sets',
                               type: 'number' }
        %td
          %a.btn.btn-default{ ng_click: 'vm.removeRound(round)' }
            %span.ion-trash-a

