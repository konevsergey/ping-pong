.panel.panel-body
  .form-group
    %a.btn.btn-default{ :'ng-click' => 'vm.selectAll()' }
      %span.fa.fa-check-square-o
      Select all
    %a.btn.btn-default{ :'ng-click' => 'vm.unselectAll()' }
      %span.fa.fa-square-o
      Unelect all

  .list-container
    .form-group{ :'ng-repeat' => 'user in vm.users' }
      %input{ :type => "checkbox",
              :'checklist-model' => 'vm.selectedPlayers',
              :'checklist-value' => 'user' }
        {{user.firstName}} {{user.lastName}}


.form-group.row
  .col-xs-3.col-xs-offset-3
    =render_button 'next', :'ui-sref' => 'newTournament.rounds'
  =render_button 'cancel', :'ui-sref' => 'tournaments'
